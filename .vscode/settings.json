{
  // ğŸ¯ åŸºæœ¬ã‚¨ãƒ‡ã‚£ã‚¿è¨­å®š
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "prettier.requireConfig": true,

  // âš¡ è‡ªå‹•ä¿å­˜ãƒ»ä¿®æ­£è¨­å®š
  "files.autoSave": "onFocusChange",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.removeUnusedImports": "explicit",
    "source.addMissingImports": "explicit"
  },

  // ğŸ§ª Vitest è¨­å®šå¼·åŒ–
  "vitest.configFiles": ["vitest.config.ts"],
  "vitest.workspaceConfig": "",
  "vitest.rootConfig": "./vitest.config.ts",
  "vitest.commandLine": "pnpm vitest",
  "vitest.enable": true,
  "vitest.showFailMessages": true,
  "vitest.disableWorkspaceWarning": true,
  "vitest.experimentalOptimized": true,

  // ğŸ”§ ESLint è¨­å®š
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": ["."],
  "eslint.useFlatConfig": true,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },

  // ğŸ“ TypeScript è¨­å®šå¼·åŒ–
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.suggest.completeFunctionCalls": true,

  // âš›ï¸ React é–‹ç™ºæ”¯æ´
  "emmet.includeLanguages": {
    "typescript": "typescriptreact",
    "javascript": "javascriptreact"
  },
  "react.snippets.enabled": true,

  // ğŸ¨ ãƒ•ã‚¡ã‚¤ãƒ«é–¢é€£è¨­å®š
  "files.associations": {
    "*.css": "css",
    "*.tsx": "typescriptreact"
  },
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // ğŸ“ ã‚¨ãƒ‡ã‚£ã‚¿è¡¨ç¤ºè¨­å®š
  "editor.rulers": [80, 100],
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "on",
  "editor.showFoldingControls": "always",

  // ğŸ” æ¤œç´¢ãƒ»é™¤å¤–è¨­å®šæœ€é©åŒ–
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true,
    "**/coverage": true,
    "**/*.lock": true,
    "**/.local": true,
    "**/.vite": true,
    "**/.cache": true,
    "**/.swc": true,
    "**/build": true,
    "**/.turbo": true,
    "**/tsconfig.tsbuildinfo": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.local": true,
    "**/tsconfig.tsbuildinfo": true,
    "**/.vite": true,
    "**/.cache": true,
    "**/.swc": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/.vite/**": true,
    "**/.cache/**": true,
    "**/.swc/**": true,
    "**/build/**": true,
    "**/.turbo/**": true,
    "**/tsconfig.tsbuildinfo": true
  },

  // ğŸ¯ è¨€èªåˆ¥ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆè¨­å®š
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.rulers": [80]
  },

  // ğŸ”§ JavaScript/TypeScript è¨­å®š
  "javascript.suggest.includeCompletions": true,
  "typescript.suggest.includeCompletions": true,
  "javascript.suggest.completeFunctionCalls": true,

  // ğŸ¨ CSSè¨­å®š
  "css.validate": true,
  "scss.validate": true,
  "less.validate": true,

  // ğŸ“ˆ ãƒ‘ãƒ•ã‚©ãƒ¼ãƒãƒ³ã‚¹æœ€é©åŒ–è¨­å®š
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on",
    "other": "on"
  },
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.inlayHints.enabled": "on",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,

  // ğŸ”— Git è¨­å®šå¼·åŒ–
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.allowForcePush": false,

  // ğŸ› ï¸ é–‹ç™ºä½“é¨“å‘ä¸Š
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.enablePreview": false,
  "workbench.editor.closeOnFileDelete": true,

  // ğŸ“Š å•é¡Œãƒ»è¨ºæ–­è¨­å®š
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,

  // ğŸ¯ æ‹¡å¼µæ©Ÿèƒ½å›ºæœ‰è¨­å®š
  "extensions.experimental.affinity": {
    "esbenp.prettier-vscode": 1,
    "dbaeumer.vscode-eslint": 1,
    "ms-vscode.vscode-typescript-next": 1
  },

  // ğŸš« ä¸è¦ãªæ¤œè¨¼ç„¡åŠ¹åŒ–
  "axe.disableForWorkspace": true,
  "axe-accessibility.disableValidation": true,
  "microsoft-edge-tools.webhint.enabled": false,
  "webhint.enable": false,

  // ğŸ“– ã‚¹ãƒšãƒ«ãƒã‚§ãƒƒã‚¯è¨­å®š
  "cSpell.words": [
    "cleanup",
    "refactor",
    "modernize",
    "standardize",
    "optimize",
    "googlemaps",
    "markerclusterer",
    "vitest",
    "pnpm",
    "tsconfig",
    "vite",
    "sado",
    "kueccha"
  ],

  // ğŸ¨ UI ã‚«ã‚¹ã‚¿ãƒã‚¤ã‚º
  "workbench.colorCustomizations": {
    "statusBar.background": "#1f4788",
    "statusBar.foreground": "#ffffff",
    "editorRuler.foreground": "#333333"
  },

  // ğŸ”§ çµ‚ç«¯è¨­å®š
  "terminal.integrated.defaultProfile.windows": "PowerShell"
}
