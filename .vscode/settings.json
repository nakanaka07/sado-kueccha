  "files.trimTrailingWhitespace": true,

  // ğŸ“ ã‚¨ãƒ‡ã‚£ã‚¿è¡¨ç¤ºè¨­å®š
  "editor.rulers": [80, 100],
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "on",
  "editor.showFoldingControls": "always",

  // ğŸ” æ¤œç´¢ãƒ»é™¤å¤–è¨­å®šæœ€é©åŒ–
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true,
    "**/coverage": true,
    "**/*.lock": true,
    "**/.local": true,
    "**/.vite": true,
    "**/.cache": true,
    "**/.swc": true,
    "**/build": true,
    "**/.turbo": true,
    "**/tsconfig.tsbuildinfo": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.local": true,
    "**/tsconfig.tsbuildinfo": true,
    "**/.vite": true,
    "**/.cache": true,
    "**/.swc": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/.vite/**": true,
    "**/.cache/**": true,
    "**/.swc/**": true,
    "**/build/**": true,
    "**/.turbo/**": true,
    "**/tsconfig.tsbuildinfo": true
