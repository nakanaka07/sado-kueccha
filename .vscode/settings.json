{
  // 🎯 基本エディタ設定
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "prettier.requireConfig": true,

  // ⚡ 自動保存・修正設定
  "files.autoSave": "onFocusChange",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.removeUnusedImports": "explicit",
    "source.addMissingImports": "explicit"
  },

  // 🧪 Vitest 設定強化
  "vitest.configFiles": ["vitest.config.ts"],
  "vitest.workspaceConfig": "",
  "vitest.rootConfig": "./vitest.config.ts",
  "vitest.commandLine": "pnpm vitest",
  "vitest.enable": true,
  "vitest.showFailMessages": true,
  "vitest.disableWorkspaceWarning": true,
  "vitest.experimentalOptimized": true,

  // 🔧 ESLint 設定
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": ["."],
  "eslint.useFlatConfig": true,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },

  // 📝 TypeScript 設定強化
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.suggest.includeCompletionsForImportStatements": true,
  "typescript.suggest.includeCompletionsWithSnippetText": true,

  // ⚛️ React 開発支援
  "emmet.includeLanguages": {
    "typescript": "typescriptreact",
    "javascript": "javascriptreact"
  },
  "react.snippets.enabled": true,
  "typescript.suggest.classMemberSnippets.enabled": false,

  // 🎨 ファイル関連設定
  "files.associations": {
    "*.css": "css",
    "*.tsx": "typescriptreact",
    "*.module.css": "css",
    "vite.config.*": "typescript"
  },
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // 📏 エディタ表示設定
  "editor.rulers": [80, 100],
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "on",
  "editor.showFoldingControls": "always",

  // 🔍 検索・除外設定最適化
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true,
    "**/coverage": true,
    "**/*.lock": true,
    "**/.local": true,
    "**/.vite": true,
    "**/.cache": true,
    "**/.swc": true,
    "**/build": true,
    "**/.turbo": true,
    "**/tsconfig.tsbuildinfo": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.local": true,
    "**/tsconfig.tsbuildinfo": true,
    "**/.vite": true,
    "**/.cache": true,
    "**/.swc": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/.vite/**": true,
    "**/.cache/**": true,
    "**/.swc/**": true,
    "**/build/**": true,
    "**/.turbo/**": true,
    "**/tsconfig.tsbuildinfo": true
  },

  // 🎯 言語別フォーマット設定
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.rulers": [80]
  },

  // 🔧 JavaScript/TypeScript 設定
  "javascript.suggest.includeCompletions": true,
  "typescript.suggest.includeCompletions": true,
  "javascript.suggest.completeFunctionCalls": true,

  // 🎨 CSS設定
  "css.validate": true,
  "scss.validate": true,
  "less.validate": true,

  // 📈 パフォーマンス最適化設定
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on",
    "other": "on"
  },
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.inlayHints.enabled": "on",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.suggest.preview": true,
  "editor.suggest.shareSuggestSelections": true,

  // 🔗 Git 設定強化
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.allowForcePush": false,

  // 🛠️ 開発体験向上
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.enablePreview": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 10,
  "workbench.tree.indent": 20,

  // 📊 問題・診断設定
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,

  // 🎯 拡張機能固有設定
  "extensions.experimental.affinity": {
    "esbenp.prettier-vscode": 1,
    "dbaeumer.vscode-eslint": 1,
    "ms-vscode.vscode-typescript-next": 1
  },

  // 🚫 不要な検証無効化
  "axe.disableForWorkspace": true,
  "axe-accessibility.disableValidation": true,
  "microsoft-edge-tools.webhint.enabled": false,
  "webhint.enable": false,

  // 📖 スペルチェック設定
  "cSpell.words": [
    "cleanup",
    "refactor",
    "modernize",
    "standardize",
    "optimize",
    "googlemaps",
    "markerclusterer",
    "vitest",
    "pnpm",
    "tsconfig",
    "vite",
    "sado",
    "kueccha",
    "geolocation",
    "coords",
    "latlon",
    "viewport"
  ],

  // 🎨 UI カスタマイズ
  "workbench.colorCustomizations": {
    "statusBar.background": "#1f4788",
    "statusBar.foreground": "#ffffff",
    "editorRuler.foreground": "#333333"
  },

  // 🔧 ターミナル設定強化
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "args": ["-NoLogo", "-ExecutionPolicy", "Bypass"]
    }
  },
  "terminal.integrated.env.windows": {
    "FORCE_COLOR": "1",
    "NODE_OPTIONS": "--max-old-space-size=8192"
  },
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.shellIntegration.showWelcome": false,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.enablePersistentSessions": false,

  // 🤖 AI拡張機能設定
  "claude.autoStart": false,
  "claude.enableTerminalIntegration": false,
  "claude.disableSSE": true,

  // 🚀 GitHub Copilot 設定強化
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false
  },
  "github.copilot.advanced.inlineSuggestCount": 3,
  "github.copilot.chat.localeOverride": "ja",

  // 🎯 インポート最適化設定は上記TypeScript設定に統合済み

  // 🔧 開発体験向上設定
  "editor.suggest.insertMode": "replace",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.tabCompletion": "on",
  "editor.parameterHints.enabled": true,

  // 📊 パフォーマンス監視設定
  "typescript.preferences.noSemicolons": false,
  "typescript.preferences.quoteStyle": "double",
  "javascript.preferences.quoteStyle": "double",

  // 🎨 UI改善設定
  "editor.stickyScroll.enabled": true,
  "editor.accessibilitySupport": "auto",
  "workbench.tree.enableStickyScroll": true,
  "workbench.list.smoothScrolling": true,

  // 🔍 検索・ナビゲーション強化
  "search.searchOnType": true,
  "search.smartCase": true,
  "workbench.commandPalette.experimental.suggestCommands": true,

  // 🛡️ セキュリティ設定
  "security.workspace.trust.untrustedFiles": "prompt",
  "extensions.ignoreRecommendations": false,
  "telemetry.telemetryLevel": "error"
}
