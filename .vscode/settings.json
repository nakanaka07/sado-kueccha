  "vitest.commandLine": "pnpm vitest",
  "vitest.enable": true,
  "vitest.showFailMessages": true,
  "vitest.disableWorkspaceWarning": true,
  "vitest.experimentalOptimized": true,

  // ğŸ”§ ESLint è¨­å®š
