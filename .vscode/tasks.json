{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "📦 pnpm install",
      "type": "shell",
      "command": "pnpm",
      "args": ["install"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "🚀 dev server",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error)\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "vite.*dev",
          "endsPattern": "ready in"
        }
      },
      "options": {
        "env": {
          "FORCE_COLOR": "1"
        }
      }
    },
    {
      "label": "🚀 dev server (auto-stop)",
      "type": "shell",
      "command": "powershell",
      "args": ["-ExecutionPolicy", "Bypass", "-File", "scripts/dev-auto-stop.ps1"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error)\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "🚀 Starting sado-kueccha development server",
          "endsPattern": "✅ Development server started"
        }
      },
      "options": {
        "env": {
          "FORCE_COLOR": "1"
        }
      }
    },
    {
      "label": "🛑 stop dev server",
      "type": "shell",
      "command": "powershell",
      "args": ["-ExecutionPolicy", "Bypass", "-File", "scripts/stop-dev-server.ps1"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "🏗️ build",
      "type": "shell",
      "command": "pnpm",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "👁️ preview",
      "type": "shell",
      "command": "pnpm",
      "args": ["preview"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "dependsOn": "🏗️ build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "🏗️ build & preview",
      "type": "shell",
      "command": "pnpm",
      "args": ["build", "&&", "pnpm", "preview"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error)\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "building for production",
          "endsPattern": "Local:.*http://localhost:[0-9]+"
        }
      }
    },
    {
      "label": "👁️ preview only",
      "type": "shell",
      "command": "pnpm",
      "args": ["preview"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error)\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "preview",
          "endsPattern": "Local:.*http://localhost:[0-9]+"
        }
      }
    },
    {
      "label": "🧪 test",
      "type": "shell",
      "command": "pnpm",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^\\s*(.*)\\s+(FAIL|PASS)\\s+(.*)$",
            "file": 3,
            "severity": 2,
            "message": 1
          },
          {
            "regexp": "^\\s*❯\\s+(.*)$",
            "message": 1
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Waiting for file changes",
          "endsPattern": "watching for file changes"
        }
      }
    },
    {
      "label": "🧪 test:run",
      "type": "shell",
      "command": "pnpm",
      "args": ["test:run"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^\\s*(.*)\\s+(FAIL|PASS)\\s+(.*)$",
            "file": 3,
            "severity": 2,
            "message": 1
          },
          {
            "regexp": "^\\s*❯\\s+(.*)$",
            "message": 1
          }
        ]
      }
    },
    {
      "label": "📊 test:coverage",
      "type": "shell",
      "command": "pnpm",
      "args": ["test:coverage"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^\\s*(.*)\\s+(FAIL|PASS)\\s+(.*)$",
            "file": 3,
            "severity": 2,
            "message": 1
          }
        ]
      }
    },
    {
      "label": "🔍 type-check",
      "type": "shell",
      "command": "pnpm",
      "args": ["type-check"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "🧹 lint",
      "type": "shell",
      "command": "pnpm",
      "args": ["lint"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "🔧 lint:fix",
      "type": "shell",
      "command": "pnpm",
      "args": ["lint:fix"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "🧽 clean",
      "type": "shell",
      "command": "pnpm",
      "args": ["clean"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "🚀 ci",
      "type": "shell",
      "command": "pnpm",
      "args": ["ci"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc", "$eslint-stylish"]
    }
  ]
}
