{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // === Browser Environment ===
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    // === Enhanced Type Checking for App ===
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    // === Build Configuration ===
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    // === Type Definitions ===
    "types": [
      "node",
      "google.maps"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "node_modules",
    "dist"
  ]
}