{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // テスト環境用設定
    "types": [
      "google.maps",
      "vite/client",
      "@vitest/globals",
      "@testing-library/react",
      "@testing-library/jest-dom",
      "node"
    ],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.test.tsbuildinfo",
    "allowJs": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/setupTests.ts",
    "vitest.config.ts"
  ]
}
