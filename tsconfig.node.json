{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // === Node.js Environment ===
    "lib": [
      "ES2022"
    ],
    // === Build Configuration ===
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    // === Type Definitions ===
    "types": [
      "node"
    ]
  },
  "include": [
    "vite.config.ts",
    "eslint.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*"
  ]
}