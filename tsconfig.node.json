{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Node.js環境用設定
    "lib": ["ES2022"],
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "declaration": true,
    "outDir": "./dist/node",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "vite/**/*.ts",
    "eslint.config.js"
  ],
  "exclude": [
    "src/**/*"
  ]
}
