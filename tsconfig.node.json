{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Node.js固有のライブラリ
    "lib": [
      "ES2022"
    ],
    // ビルド設定（Node.js固有）
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    // 型定義（Node.js固有）
    "types": [
      "node"
    ]
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "eslint.config.js",
    "postcss.config.js",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*"
  ]
}