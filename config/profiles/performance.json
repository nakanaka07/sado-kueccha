{
  "name": "performance",
  "description": "パフォーマンス重視プロファイル - 最適化・軽量化",
  "performance": {
    "bundleSize": {
      "maxChunkSize": 1024000,
      "maxAssetSize": 512000
    },
    "buildTime": {
      "maxBuildTime": 60
    },
    "runtime": {
      "initialLoadTime": 1500,
      "cacheHitRate": 95
    }
  },
  "features": {
    "enablePWA": true,
    "enableBundleAnalyzer": false,
    "enableDevTools": false,
    "enableSourceMaps": false
  },
  "plugins": {
    "essential": ["@vitejs/plugin-react-swc"],
    "optimization": ["vite-plugin-pwa", "rollup-plugin-terser"]
  },
  "build": {
    "minify": "terser",
    "treeshake": "smallest",
    "splitChunks": true,
    "optimization": "aggressive",
    "compression": "brotli"
  },
  "optimization": {
    "preloadChunks": true,
    "lazyLoading": true,
    "codesplitting": "aggressive",
    "assetOptimization": true
  }
}
